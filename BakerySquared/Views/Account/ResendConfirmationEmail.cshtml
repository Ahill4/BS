@model BakerySquared.Models.ResendConfirmationEmailViewModel
@{
    ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title</h2>

<div>
    <p>
        An email was sent to confirm the account.  If the email wasn't received, check the email entry and select resend.
        If the email entry is incorrect, restart registration.
    </p>
</div>

@{
    if (String.IsNullOrEmpty(ViewBag.errorMessage))
    {
    }
    else
    {
        <p>@ViewBag.errorMessage</p>
    }
}

@using (Html.BeginForm("ResendConfirmationEmail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Resend Link" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



