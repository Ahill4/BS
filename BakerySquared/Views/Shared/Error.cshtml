@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger">@ViewBag.Title</h1>

@{
    if (String.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <p>An error occurred while processing your request.</p>
    }
    else
    {
        <p>@ViewBag.errorMessage</p>
    }
}

